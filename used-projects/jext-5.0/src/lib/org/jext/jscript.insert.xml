      <item name="Save from frame catch">&lt;SCRIPT LANGUAGE="javascript"&gt;\n&lt;!--\n// Load me in a new window if caught in a frame\nif (self != top)\n  top.location.href = self.location.href;\n// --&gt;\n&lt;/SCRIPT&gt;</item>
      <item name="Get screen resolution">&lt;SCRIPT LANGUAGE="javascript"&gt;\n&lt;!--\n// Save screen width in x_res and screen height in y_res\nvar x_res = screen.width;\nvar y_res = screen.height;\n// --&gt;\n&lt;/SCRIPT&gt;</item>
      <item name="Check browser">&lt;SCRIPT LANGUAGE="javascript"&gt;\n&lt;!--\nname = navigator.appName;\nversion = navigator.appVersion;\nif (name == "Microsoft Internet Explorer")\n{\n  if (parseInt(version.substring(0, 1)) &lt; 4)\n    document.location.href = "error.html";\n} else if (name == "Netscape") {\n  if (parseInt(version.substring(0, 1)) &lt; 3)\n    document.location.href = "error.htm";\n}\n// --&gt;\n&lt;/SCRIPT&gt;</item>
    </menu>

