    <item label="$Find..." action="find" picture="images/menu_find" />
    <item label="$Replace..." action="replace" picture="images/menu_replace" />
    <item label="Find $All.." action="find_all" />
    <item label="F$ind Next" action="find_next" />
    <item label="R$eplace Next" action="replace_next" />
